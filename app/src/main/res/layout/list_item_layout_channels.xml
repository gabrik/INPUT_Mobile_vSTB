<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="120dp"
    android:id="@+id/providerLinearLayo">

    <RelativeLayout
        android:id="@+id/providerRelativeLayo"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="5dp">

        <ImageView
            android:id="@+id/imageViewProviderLogo"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            app:srcCompat="@drawable/ic_tv_black_24dp" />

        <TextView
            android:id="@+id/textViewProviderName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginStart="24dp"
            android:layout_toEndOf="@id/imageViewProviderLogo"
            android:text="Provider Name"
            android:textAppearance="@style/TextAppearance.AppCompat.Large" />

        <TextView
            android:id="@+id/textViewCurrentShow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignEnd="@+id/textViewProviderName"
            android:layout_alignStart="@+id/textViewProviderName"
            android:layout_below="@+id/textViewProviderName"
            android:text="CurrentShow" />

        <ImageView
            android:id="@+id/imageViewPlay"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:layout_marginStart="332dp"
            app:srcCompat="@drawable/ic_play_arrow_black_24dp" />
    </RelativeLayout>
</LinearLayout>